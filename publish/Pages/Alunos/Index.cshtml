@page
@model MinhaAplicacao.Pages.Alunos.IndexAlunoModel
@{
    ViewData["Title"] = "Alunos Cadastrados";
}

<section class="app-main">
    <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
        <h2 class="h4 m-0">ðŸ‘¥ Alunos Cadastrados</h2>

        <a href="/Alunos/Cadastrar" class="btn btn-success btn-sm">
            <i class="bi bi-person-plus"></i> Novo Aluno
        </a>
    </div>

    @if (Model.Alunos?.Any() == true)
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle bg-white rounded shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th><i class="bi bi-person-fill"></i> Nome</th>
                        <th><i class="bi bi-envelope"></i> Email</th>
                        <th><i class="bi bi-envelope"></i> Curso</th>
                        <th><i class="bi bi-envelope"></i> Turma</th>
                        <th class="text-center"><i class="bi bi-gear"></i></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var aluno in Model.Alunos)
                    {
                        <tr>
                            <td>@aluno.Id</td>
                            <td>@aluno.Nome</td>
                            <td>@aluno.Email</td>
                            <td>@aluno.Curso</td>
                            <td>@aluno.Turma</td>
                            <td class="text-center">
                                <a href="/Alunos/Editar?id=1" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form method="post" asp-page-handler="Excluir" asp-route-id="@aluno.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Tem certeza que deseja excluir este aluno?')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted fst-italic">Nenhum aluno cadastrado ainda.</p>
    }
</section>