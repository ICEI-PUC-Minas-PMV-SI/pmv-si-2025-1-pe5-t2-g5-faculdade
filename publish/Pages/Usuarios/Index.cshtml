@page
@model MinhaAplicacao.Pages.Usuarios.IndexModel
@{
    ViewData["Title"] = "Usu치rios Cadastrados";
}

<section class="app-main">
    <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
        <h2 class="h4 m-0">游논 Usu치rios Cadastrados</h2>

        <a href="/Usuarios/Cadastrar" class="btn btn-success btn-sm">
            <i class="bi bi-person-plus"></i> Novo Usu치rio
        </a>
    </div>

    @if (Model.Usuarios?.Any() == true)
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle bg-white rounded shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th><i class="bi bi-person-fill"></i> Nome</th>
                        <th><i class="bi bi-envelope"></i> Email</th>
                        <th class="text-center"><i class="bi bi-gear"></i></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model.Usuarios)
                    {
                        <tr>
                            <td>@usuario.Id</td>
                            <td>@usuario.Nome</td>
                            <td>@usuario.Email</td>
                            <td class="text-center">
                                <a href="/Usuarios/Editar?id=@usuario.Id" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button class="btn btn-sm btn-outline-danger btn-excluir" data-id="@usuario.Id">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted fst-italic">Nenhum usu치rio cadastrado ainda.</p>
    }
</section>
@section Scripts {
    <script>
        document.querySelectorAll(".btn-excluir").forEach(botao => {
            botao.addEventListener("click", async (e) => {
                e.preventDefault();

                const id = botao.getAttribute("data-id");
                const confirmar = confirm("Tem certeza que deseja excluir este usu치rio?");
                if (!confirmar) return;

                const apiBaseUrl = "@Model.ApiBaseUrl";

                try {
                    const resposta = await fetch(`${apiBaseUrl}api/usuario/${id}`, {
                        method: "DELETE"
                    });

                    if (resposta.ok) {
                        alert("Usu치rio exclu칤do com sucesso!");
                        location.reload();
                    } else {
                        const erro = await resposta.text();
                        alert("Erro ao excluir: " + erro);
                    }
                } catch (err) {
                    alert("Erro de rede: " + err.message);
                }
            });
        });
    </script>
}