@page
@model MinhaAplicacao.Pages.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Login - UFS</title>
        <link rel="stylesheet" href="/css/login.css" asp-append-version="true" />
        <link rel="icon" type="image/png" href="~/favicon.png" />
    </head>
    <body>
        <div class="login-container">
            <div class="logo-container">
                <img src="/images/logo.png" alt="Logo da Faculdade" />
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="erro-login">
                    <p>@ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage</p>
                </div>
            }

            <form id="loginForm">
                <label>Email:</label>
                <input id="email" type="email" required />

                <label>Senha:</label>
                <input id="senha" type="password" required />

                <button type="submit">Entrar</button>
            </form>
            <div id="erroLogin" style="color: red;"></div>
        </div>
        <script>
            document.getElementById("loginForm").addEventListener("submit", async function (e) {
                e.preventDefault();

                const email = document.getElementById("email").value;
                const senha = document.getElementById("senha").value;

                const response = await fetch("/api/auth", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({ email, senha })
                });

                const result = await response.json();

                if (response.ok) {
                    window.location.href = "/Index";
                } else {
                    document.getElementById("erroLogin").innerText = result.message || "Credenciais inv√°lidas.";
                }
            });
        </script>
    </body>
</html>